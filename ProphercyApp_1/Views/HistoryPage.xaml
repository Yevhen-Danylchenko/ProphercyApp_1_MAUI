<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:ProphercyApp_1.ViewModel"
             x:Class="ProphercyApp_1.Views.HistoryPage"
             Title="Історія">
    <ContentPage.BindingContext>
        <viewmodels:HistoryViewModel/>
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="Історія передбачень"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="#eee"
                   HorizontalOptions="Center"/>
            <CollectionView ItemsSource="{Binding Prophecies}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="#16213e"
                               BorderColor="#4a4a6a"
                               CornerRadius="10"
                               Padding="15"
                               HasShadow="True">
                            <Label Text="{Binding Text}"
                                   FontSize="16"
                                   TextColor="#eee"
                                   LineBreakMode="WordWrap"/>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>